<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutDiemDanh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/txt_title_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="Điểm Danh Sinh Viên"
            android:textSize="26sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/layout_maGV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rectangle"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#B6B6B6"
                android:gravity="center_vertical"
                android:text="Giáo Viên"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/spn_maGV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="072" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/layout_mon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rectangle"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#B6B6B6"
                    android:gravity="center_vertical"
                    android:text="Môn Học:"
                    android:textAlignment="center" />

                <Spinner
                    android:id="@+id/spn_mon_hoc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="TTNT" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_phong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_mon"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rectangle"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#B6B6B6"
                    android:gravity="center_vertical"
                    android:text="Phòng học:"
                    android:textAlignment="center" />

                <Spinner
                    android:id="@+id/spn_ma_phong_hoc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="TV102" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_thu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_phong"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rectangle"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#B6B6B6"
                    android:gravity="center_vertical"
                    android:text="Thứ:"
                    android:textAlignment="center" />

                <Spinner
                    android:id="@+id/spn_thu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="2" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_tiet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_thu"
                android:background="@drawable/rectangle"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#B6B6B6"
                    android:gravity="center_vertical"
                    android:text="Tiết học:"
                    android:textAlignment="center" />

                <Spinner
                    android:id="@+id/spn_tiet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="1" />
            </LinearLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:text="Bắt Đầu"
            android:textSize="25sp" />
    </LinearLayout>
</LinearLayout>
